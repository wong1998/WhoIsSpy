.statement-list {
    padding-top: 60rpx;
    width: 100%;
    height: 300rpx;
    text-align: center;
    justify-content: center;
    align-items: center;
    border: 1px solid rgb(214, 206, 206);
}


.grid .grid-item image {
    margin: 0 auto;
    width: 60rpx;
    height: 60rpx;
}

.grid .grid-item .tag {
    font-size: 20rpx;
    border-radius: 30rpx;
    padding: 2rpx 10rpx;
    min-width: 30rpx;
    max-width: 40rpx;
    /*单行省略号*/
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    height: 30rpx;
    color: white;
    background: red;
    position: absolute;
    margin: auto;
    top: 20rpx;
    right: 20rpx;
}