.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.3;
}

.modalDlg {
    width: 580rpx;
    height: 550rpx;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    margin: -370rpx 85rpx;
    background-color: #fff;
    border-radius: 36rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.result-text{
    margin: 30rpx;
    width: 400rpx;
    height: 340rpx;
    border: 1px solid rgb(201, 206, 202);

}
.result-button{
    position: absolute;
    bottom: 80rpx;
    color: #fff;
    width: 270rpx;
    height: 80rpx;
    line-height: 50rpx;
    background: #d95155;
    text-align: center;
    border-radius: 12rpx;
    margin-top: 60rpx;
    font-size: 35rpx;
    text-indent: 0em;
}


.state-input {
    width: 100%;
