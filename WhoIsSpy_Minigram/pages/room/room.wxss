.word-text {

    text-align: center;

}

.grid {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    height: 400rpx;
    /* border-top: 1px solid #eee; */
    border: 1px solid rgb(214, 206, 206);
}

.grid .grid-item {
    position: relative;
    padding: 10rpx;
    width: 25%;
    height: 200rpx;
    box-sizing: border-box;
    border: 1px solid #eee;
    font-size: 30rpx;
    flex-direction: column;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}

.grid .grid-item .host-text {
    position: absolute;
    padding: 0rpx;
    width: 25%;
    height: 100rpx;
    left: 0rpx;
    top: 0rpx;
    box-sizing: border-box;
    border: 1px solid rgb(15, 216, 92);
    font-size: 30rpx;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}

.grid .grid-item .player-number {
    position: absolute;
    padding: 0rpx;
    width: 35rpx;
    height: 35rpx;
    left: 0rpx;
    bottom: 0rpx;
    box-sizing: border-box;
    border-radius: 60%;
    border: 1px solid rgb(233, 200, 93);
    font-size: 30rpx;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}

.grid .grid-item .no_ready_state {
    position: absolute;
    padding: 0rpx;
    width: 25%;
    height: 120rpx;
    right: 0rpx;
    top: 0rpx;
    box-sizing: border-box;
    border: 1px solid rgb(10, 184, 77);
    font-size: 30rpx;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}

.grid .grid-item .ready_state {
    position: absolute;
    padding: 0rpx;
    width: 25%;
    height: 120rpx;
    right: 0rpx;
    top: 0rpx;
    box-sizing: border-box;
    border: 1px solid rgb(189, 202, 194);
    font-size: 30rpx;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}

